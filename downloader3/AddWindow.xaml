<Window x:Class="downloader3.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:downloader3"
        mc:Ignorable="d"
        Title="{DynamicResource lang_addlinks}" Height="246.25" Width="508.656" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="buttonSave" Content="{DynamicResource lang_save}" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" Height="24" VerticalAlignment="Bottom" Click="buttonSave_Click" />
        <TextBox x:Name="linksTextBox" Margin="10,10,10,39" Text="" AcceptsReturn="True" TextChanged="linksTextBox_TextChanged" VerticalScrollBarVisibility="Auto"/>
        <TextBox x:Name="pathTextBox" Margin="10,0,127,11" Text="C:\" Height="23" VerticalAlignment="Bottom"/>
        <Button x:Name="buttonBrowse" Content="..." ToolTip="{DynamicResource lang_browse}" HorizontalAlignment="Right" Margin="0,0,90,10" Width="32" Height="24" VerticalAlignment="Bottom" Click="buttonBrowse_Click"/>
    </Grid>
</Window>