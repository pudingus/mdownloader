<Window x:Class="downloader3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:downloader3"
        mc:Ignorable="d"
        Title="Downloader" Height="479" Width="687">
    <Grid>
        <ListView x:Name="DataView" Margin="10,57,10,10">
            <ListView.Resources>
                <ContextMenu x:Key="ItemContextMenu">
                    <MenuItem Header="Přehrát" Background="WhiteSmoke" Click="MenuItem_Click" />
                    <MenuItem Header="Otevřít složce" Background="WhiteSmoke" Click="MenuItem_Click_1" />
                </ContextMenu>
            </ListView.Resources>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}" >
                    <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding Name}" />
                        <ProgressBar Grid.Column="1" Height="20" Width="100" Value="{Binding Progress}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="160" Header="Název souboru" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Width="150" Header="Velikost" DisplayMemberBinding="{Binding Size}"/>
                    <GridViewColumn x:Name="col1" Width="100" Header="Průběh" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ProgressBar Height="20" Width="{Binding ElementName=col1, Path=Width}" Value="{Binding Progress}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="30" Header="%" DisplayMemberBinding="{Binding Percent}"/>
                    <GridViewColumn Width="100" Header="Rychlost" DisplayMemberBinding="{Binding Speed}"/>
                    <GridViewColumn Width="100" Header="Zbývající čas" DisplayMemberBinding="{Binding Remaining}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="buttonAdd" Content="+" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="30" Click="buttonAdd_Click" Height="30" FontSize="16"/>
        <Button x:Name="buttonPause" Content="Pozastavit" HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top" Width="90" Height="30"/>
        <Button x:Name="buttonResume" Content="Obnovit" HorizontalAlignment="Left" Margin="206,10,0,0" VerticalAlignment="Top" Width="90" Height="30" RenderTransformOrigin="0.511,0.533"/>
        <Button x:Name="buttonCancel" Content="Zrušit" HorizontalAlignment="Left" Margin="312,10,0,0" VerticalAlignment="Top" Width="90" Height="30" Click="buttonCancel_Click"/>
        <Button x:Name="buttonSettings" Content="Nastavení" Margin="0,11,10,0" HorizontalAlignment="Right" Width="90" Height="30" VerticalAlignment="Top"/>
    </Grid>
</Window>
